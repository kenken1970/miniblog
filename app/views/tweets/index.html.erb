<h1 class="index-tweet">ツイート一覧</h1>
 
  <% @tweets.each do |tweet| %>

    <div class="contents">
    <p><span>email: </span><%=link_to tweet.user.email, user_path(tweet.user.id), class: "contents-link" %></p> 
    <hr>
    <p><span>ツイート内容: </span><br><%=link_to tweet.body, tweet_path(tweet.id), class: "contents-link" %></p>
    </div>
  <% end %>

<%= paginate(@tweets) %>